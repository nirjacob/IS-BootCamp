{
  "host": "localhost",
  "port": 3000,
  "dbName": "podcasts",
  "filePath": "data/podcasts.json",
  "reviewsPath": "data/reviews.json",
  "cacheExpiration": 1200,
  "isCacheEnabled": true,
  "static": "react-client/src",
  "redis": {
    "port": 6379,
    "host": "localhost",
    "cacheDuration": 5
  },
  "cache": [
    {
      "requestUrl": "/podcast/:id",
      "method": "DELETE",
      "cacheToClear": "/podcast/:id"
    },
    {
      "requestUrl": "/podcast/:id",
      "method": "PUT",
      "cacheToClear": "/podcast/:id"
    }
  ],
  "Db": {
    "host": "localhost",
    "port": 3306,
    "user": "root",
    "pass": ""
  },
  "auth": {
    "secret": "IS-BOOTCAMP",
    "expireIn": 1500,
    "protectedUrls": [
      {
        "method": "POST",
        "path": "/review/:id"
      },
      {
        "method": "POST",
        "path": "/podcast/new"
      },
      {
        "method": "PUT",
        "path": "/podcast/:id"
      },
      {
        "method": "DELETE",
        "path": "/podcast/:id"
      }
    ],
    "isAuthEnabled": true
  }
}



